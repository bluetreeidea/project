<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scaleType="fitXY" >

        <ImageView
            android:id="@+id/Sedio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/sedio_header" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/back_btn" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/logo_icon" />

        <ImageView
            android:id="@+id/signin"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/done" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/signuptext" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_below="@+id/username"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:gravity="right"
        android:hint="atleast 8 characters "
        android:singleLine="true"
        android:textSize="16sp" 
        android:paddingBottom="4dp"
        android:paddingRight="2dp"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:gravity="right"
        android:hint="Optional "
        android:inputType="number"
        android:singleLine="true"
        android:textSize="16sp" 
        android:paddingBottom="4dp"
         android:paddingRight="2dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:gravity="right"
        android:hint="example@abc.com "
        android:singleLine="true"
        android:textSize="16sp" 
        android:paddingBottom="4dp"
         android:paddingRight="2dp"/>

          <TextView
              android:id="@+id/textView3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/username"
              android:layout_alignLeft="@+id/username"
              android:layout_marginBottom="1dp"
              android:layout_marginLeft="1dp"
              android:background="#f9f9f9"
              android:text=" Email     "
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="@color/mani"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/password"
              android:layout_alignLeft="@+id/textView3"
              android:layout_marginBottom="1dp"
              android:layout_marginLeft="0dp"
              android:background="#f9f9f9"
              android:text=" Password   "
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="@color/mani"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/phone"
              android:layout_alignLeft="@+id/textView3"
              android:layout_marginBottom="1dp"
              android:background="#f9f9f9"
              android:text=" Phone      "
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="@color/mani"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/Textview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/phone"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="31dp"
              android:text="By signing up, you agree to the"
              android:textSize="14sp" 
              android:gravity="center_horizontal"
              android:paddingBottom="4dp"/>

          <TextView
              android:id="@+id/Textview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/phone"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="58dp"
              android:text="Privacy policy and Terms of service"
              android:textColor="@color/maniya"
              android:textSize="14sp"
              android:textStyle="bold" 
              android:gravity="center_horizontal"/>
      
</RelativeLayout>