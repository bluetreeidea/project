<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:scaleType="fitXY"
                android:src="@drawable/sedio_header" />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="35dp"
                android:layout_height="57dp"
                android:layout_gravity="right"
                android:src="@drawable/uptick" />

             <ImageView
                 android:id="@+id/ImageView01"
                 android:layout_width="75dp"
                 android:layout_height="58dp"
                 android:layout_marginLeft="10dp"
                 android:src="@drawable/logosedio" />

             <ImageView
                 android:id="@+id/camera"
                 android:layout_width="20dp"
                 android:layout_height="16dp"
                 android:layout_marginLeft="3dp"
                 android:layout_marginTop="19dp"
                 android:src="@drawable/back1" />
            
        </FrameLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
        </ListView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
          
            android:text="Post on Sedio" 
            android:background="#18000000"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/autoCompleteTextView1"
            android:layout_toRightOf="@+id/autoCompleteTextView1"
            android:src="@drawable/flip" />

        <EditText
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/frameLayout1"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Comments" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:entries="@array/country_arrays"
            android:prompt="@string/country_prompt" />
       
    </RelativeLayout>

</LinearLayout>